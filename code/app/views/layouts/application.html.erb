<!DOCTYPE html>
<html>
<head>
  <title>Tipjar</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render (@user ? 'shared/user_controls' : 'shared/oauth') %>

<div id="flash_messages">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
  <% end %>
</div>
<div id="error_messages">
	<% if @errors %>
		<% @errors.each do |error| %>
	  	<%= content_tag(:div, error, :class => "error-message") %>
	  <% end %>
  <% end %>
</div>

<div class='container'>
  <%= yield %>
</div>

</body>
</html>
