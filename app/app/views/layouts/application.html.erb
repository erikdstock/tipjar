<!DOCTYPE html>
<html>
  <head>
    <title>Src</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class='page'>
      <header>
        <%= render (@user ? 'shared/user_controls' : 'shared/oauth') %>
      </header>
      <div class='content'>
        <%#recommended by devise maybe remove? %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%#%>

        <div id="flash_messages">
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, :class => "flash #{key}") %>
          <% end %>
        </div>
        <div id="error_messages">
          <% if @errors %>
            <% @errors.each do |error| %>
              <%= content_tag(:div, error, :class => "error-message") %>
            <% end %>
          <% end %>
        </div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
